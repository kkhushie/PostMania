<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PostMania</title>
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .header-container {
            display: flex;
            /* Use flexbox to align items */
            align-items: center;
            /* Center items vertically */
        }

        .verified-icon {
            margin-left: 3px;
            /* Adjust the margin as needed */
        }

        .verified-svg {
            fill: #234bff;

            /* Fill color of the SVG icon */
            width: 18px;
            /* Width of the SVG icon */
            height: 18px;
            /* Height of the SVG icon */
        }
    </style>
</head>

<body>
    <div class="profile-container w-full min-h-screen bg-zinc-900 p-5 text-white">
        <div class="top flex justify-end items-center w-[94%] fixed gap-3 px-2">
            <button><a href="/feed">Feed</a></button>
            <button class="border-2 border-blue-500 rounded-md px-2 py-1 text-blue-500"><a href="/logout">Logout</a></button>
        </div>
        <div class="mt-14">
            <div class="flex gap-3">
                <div class="w-10 h-10 rounded-[50%] border-[1px] border-zinc-700">
                    <a href="/profile/upload" class="relative">
                        <img class="w-full h-full object-cover rounded-[50%]" onerror="this.src='./images/uploads/default.jpg'" src="<%= user.profilepic %>" alt="Profile Picture">
                        <span class="absolute bottom-[-11%] right-0 bg-blue-500 text-center text-sm flex items-center justify-center w-3 h-3 text-white rounded-[50%] border-[1px] p-1 border-zinc-900">+</span>
                    </a>
                </div>
                <h1 class="text-3xl font-semibold"><span class="font-light">Hello</span>, <%= user.name %>ðŸ‘‹</h1>
            </div>
            <h5 class="my-5">You can create a new post.</h5>
            <form action="/post" method="post">
                <textarea name="content" required placeholder="What's on your mind?"
                    class="w-1/3 p-3 resize-none bg-transparent outline-none border-2 rounded-md border-zinc-800 block"></textarea>
                <input class="submit-btn px-3 w-40 py-1 bg-blue-500 block rounded-md mt-2" value="Create Post" type="submit">
            </form>
            <div class="posts mt-20">
                <h3 class="text-zinc-400">Your Posts</h3>
                <div class="postcontainer mt-5" id="postContainer">
                    <% user.posts.reverse().forEach((post) => { %>
                        <div class="post w-1/3 p-4 mb-4 rounded-md bg-zinc-800 border-[1px] border-zinc-700">
                            <div class="flex gap-2 items-center mb-3">
                                <div class="w-8 h-8 rounded-[50%] border-[1px] border-zinc-700 overflow-hidden">
                                    <img class="w-full h-full object-cover" src="<%= user.profilepic %>" onerror="this.src='./images/uploads/default.jpg'" alt="img">
                                </div>
                                <h4 class="text-blue-500 mb-2 flex justify-center items-center">@<%= user.username %>
                                    <% if (user.username==="owner" ) { %>
                                        <span class="verified-icon ">
                                            <svg viewBox="0 0 22 22" aria-label="Verified account" role="img"
                                                class="verified-svg">
                                                <g>
                                                    <path
                                                        d="M20.396 11c-.018-.646-.215-1.275-.57-1.816-.354-.54-.852-.972-1.438-1.246.223-.607.27-1.264.14-1.897-.131-.634-.437-1.218-.882-1.687-.47-.445-1.053-.75-1.687-.882-.633-.13-1.29-.083-1.897.14-.273-.587-.704-1.086-1.245-1.44S11.647 1.62 11 1.604c-.646.017-1.273.213-1.813.568s-.969.854-1.24 1.44c-.608-.223-1.267-.272-1.902-.14-.635.13-1.22.436-1.69.882-.445.47-.749 1.055-.878 1.688-.13.633-.08 1.29.144 1.896-.587.274-1.087.705-1.443 1.245-.356.54-.555 1.17-.574 1.817.02.647.218 1.276.574 1.817.356.54.856.972 1.443 1.245-.224.606-.274 1.263-.144 1.896.13.634.433 1.218.877 1.688.47.443 1.054.747 1.687.878.633.132 1.29.084 1.897-.136.274.586.705 1.084 1.246 1.439.54.354 1.17.551 1.816.569.647-.016 1.276-.213 1.817-.567s.972-.854 1.245-1.44c.604.239 1.266.296 1.903.164.636-.132 1.22-.447 1.68-.907.46-.46.776-1.044.908-1.681s.075-1.299-.165-1.903c.586-.274 1.084-.705 1.439-1.246.354-.54.551-1.17.569-1.816zM9.662 14.85l-3.429-3.428 1.293-1.302 2.072 2.072 4.4-4.794 1.347 1.246z">
                                                    </path>
                                                </g>
                                            </svg>
                                        </span>
                                        <% } %></h4>
                            </div>
                            <p class="text-sm tracking-tight post-content">
                                <%= post.content %>
                            </p>
                            <div class="mt-5 text-sm">
                                <%= post.likes.length %> Likes
                            </div>
                            <div class="btns justify-between gap-4 mt-1 flex">
                                <div class=" flex gap-3">

                                    <a href="/like/<%= post._id %>" class="text-pink-500">
                                        <%= (post.likes.indexOf(user._id) === -1) ? "Like" : "Unlike" %>
                                    </a>
                                <a href="/edit/<%= post._id %>" class="text-zinc-600">edit</a>
                                </div>
                                
                                <a href="/delete/<%= post._id %>" onclick='confirmDeletion("<%= post._id %>")' class="text-red-500 delete-btn">Delete</a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
    <script>
        
document.addEventListener('DOMContentLoaded', function() {
    highlightMentions();
});

function highlightMentions() {
    const postContents = document.querySelectorAll('.post-content');

    postContents.forEach(content => {
        // Regular expression to find mentions (words starting with @)
        const regex = /@(\w+)/g;
        let html = content.innerHTML;

        // Replace mentions with anchor tags for linking to user profiles
        html = html.replace(regex, '<a class="text-blue-500" href="/user/$1">@$1</a>');
        content.innerHTML = html;
    });
}

   </script>
</body>

</html>
